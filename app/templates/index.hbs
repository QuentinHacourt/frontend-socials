{{page-title "Index"}}

<div class="container mt-4">
  <h2>Most recent post!</h2>
  <p>{{@model.mostRecent.[0].content}}</p>

  <h2>Most popular post!</h2>
  <p>{{@model.mostPopular.[0].content}}</p>

  {{#if @model.account.name}}
    <h2>Hello {{@model.account.name}}</h2>
    <BsForm
      @formLayout="vertical"
      @model={{this}}
      @onSubmit={{this.addPost}}
      as |form|
    >
      <form.element
        @controlType="textarea"
        @label="What's on your mind?"
        @property="text"
      />
      <form.submitButton>Tell the World!</form.submitButton>
    </BsForm>
  {{/if}}

  <h2 class="mb-4">Your Feed</h2>

  <div class="row">
    {{#each @model.posts as |post|}}
      <div class="col-md-12 mb-4">
        <LinkTo
          @route="post-details"
          @model={{post.id}}
          class="card shadow-sm h-100 text-decoration-none text-dark"
        >
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title">{{post.content}}</h5>
              <h6 class="card-subtitle mb-2 text-muted">
                Posted by:
                <LinkTo
                  @route="user-details"
                  @model={{post.author}}
                >{{post.author.name}}</LinkTo>
              </h6>
              <p class="card-text">
                <small class="text-muted">
                  Posted on:
                  {{moment-format post.created "DD/MM/YY HH:mm"}}
                </small>
              </p>
            </div>
          </div>
        </LinkTo>
      </div>
    {{else}}
      <div class="col-12">
        <div class="alert alert-info" role="alert">
          No posts found in the system. Be the first to post something!
        </div>
      </div>
    {{/each}}
  </div>
</div>
