{{page-title "Users"}}
<h1>All Users</h1>
{{#each @model as |user|}}
  <p>
    User ID:
    {{user.id}}
    - Name:
    {{user.name}}
    <LinkTo @route="user-details" @model={{user}}>View</LinkTo>
    <LinkTo @route="user-edit" @model={{user}}>Edit</LinkTo>
  </p>
{{else}}
  <p>No users found.</p>
{{/each}}
<LinkTo @route="user-new">Create New User</LinkTo>
